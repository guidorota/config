# Focus
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# Move windows in space
shift + alt - h : yabai -m window --warp west
shift + alt - j : yabai -m window --warp south
shift + alt - k : yabai -m window --warp north
shift + alt - l : yabai -m window --warp east

# Move windows to space
rshift + ralt - 1 : yabai -m window --space 1
rshift + ralt - 2 : yabai -m window --space 2
rshift + ralt - 3 : yabai -m window --space 3
rshift + ralt - 4 : yabai -m window --space 4

# Resize windows
lctrl + alt - h : yabai -m window --resize left:-100:0; \
                  yabai -m window --resize right:-100:0
lctrl + alt - j : yabai -m window --resize bottom:0:100; \
                  yabai -m window --resize top:0:100
lctrl + alt - k : yabai -m window --resize top:0:-100; \
                  yabai -m window --resize bottom:0:-100
lctrl + alt - l : yabai -m window --resize right:100:0; \
                  yabai -m window --resize left:100:0
lctrl + alt - 0x29: yabai -m space --balance

# Insertion point
cmd + shift + alt - h : yabai -m window --insert west
cmd + shift + alt - j : yabai -m window --insert south
cmd + shift + alt - k : yabai -m window --insert north
cmd + shift + alt - l : yabai -m window --insert east

# Rotate windows
cmd + shift + alt - u: yabai -m space --rotate 90
cmd + shift + alt - i: yabai -m space --rotate 270

# Toggle float
shift + alt - space : \
    yabai -m window --toggle float; \
    yabai -m window --toggle border

# Toggle fullscreen (0x29 == ;)
alt - 0x29 : yabai -m window --toggle zoom-fullscreen

